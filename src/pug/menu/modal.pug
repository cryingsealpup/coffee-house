each products, category in cards 
    each product, index in products
        .modal 
            .modal-wrapper 
                div.modal-img
                    img(src='./images/menu/' + category + '-' + (index + 1) + '.png', alt=product.name)
                div.modal-info
                    div
                        h3.bold= product.name 
                        p= product.description 
                    div
                        p.modal-buttons
                            each size in product.sizes 
                                button(type='button', data-price=size.price).button.button-menu.active= size.size
                    div
                        p.modal-buttons
                            each additives in product.additives 
                                button(type='button', data-price=additives.price).button.button-menu.active= additives.name        
                                        
                    p.price.bold(data-price=product.price)= product.price + '$'
                    hr
                    .modal-caution The cost is not final. Download our mobile app to see the final price and place your order. Earn loyalty points and enjoy your favorite coffee with up to 20% discount.
                    .button Close
